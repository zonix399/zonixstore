body {
    margin: 0;
    font-family: 'Segoe UI', Arial, Helvetica, sans-serif;
    background: #0a0a0a;
    color: #fff;
}

.navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: linear-gradient(90deg, #2d0b4e 60%, #1e90ff 100%);
    color: #fff;
    padding: 14px 36px;
    box-shadow: 0 2px 8px rgba(44, 0, 84, 0.15);
}

.logo h1 {
    margin: 0;
    font-size: 2rem;
    letter-spacing: 2px;
    color: #fff;
    text-shadow: 0 2px 8px #1e90ff;
}

nav {
    display: flex;
    gap: 22px;
}

nav a {
    color: #fff;
    text-decoration: none;
    font-weight: bold;
    padding: 8px 16px;
    border-radius: 4px;
    transition: background 0.2s, color 0.2s;
}

nav a:hover {
    background: #6c2eb6;
    color: #1e90ff;
}

.search-bar {
    display: flex;
    align-items: center;
    gap: 6px;
}

.search-bar input {
    padding: 8px 12px;
    border-radius: 4px;
    border: 1px solid #6c2eb6;
    width: 180px;
    background: #181818;
    color: #fff;
}

.search-btn {
    padding: 8px 18px;
    background: #6c2eb6;
    border: none;
    border-radius: 4px;
    font-weight: bold;
    color: #fff;
    cursor: pointer;
    transition: background 0.2s;
}

.search-btn:hover {
    background: #1e90ff;
    color: #fff;
}

.account a {
    color: #fff;
    margin-left: 18px;
    text-decoration: none;
    font-weight: bold;
    transition: color 0.2s;
}

.account a:hover {
    color: #6c2eb6;
}

.hero {
    background: linear-gradient(90deg, #2d0b4e 60%, #1e90ff 100%);
    color: #fff;
    padding: 48px 36px;
    text-align: center;
    border-radius: 0 0 24px 24px;
    box-shadow: 0 4px 24px rgba(44, 0, 84, 0.12);
}

.shop-btn {
    margin-top: 22px;
    padding: 14px 36px;
    background: #1e90ff;
    border: none;
    border-radius: 8px;
    font-size: 1.15rem;
    font-weight: bold;
    color: #fff;
    cursor: pointer;
    box-shadow: 0 2px 8px #6c2eb6;
    transition: background 0.2s;
}

.shop-btn:hover {
    background: #6c2eb6;
}

.categories {
    margin: 44px 0 24px 0;
    padding: 0 36px;
}

.category-list {
    display: flex;
    gap: 24px;
    margin-top: 18px;
}

.category-card {
    background: #181818;
    border: 2px solid #6c2eb6;
    border-radius: 10px;
    padding: 32px 44px;
    font-size: 1.15rem;
    font-weight: bold;
    color: #fff;
    box-shadow: 0 2px 12px rgba(44, 0, 84, 0.10);
    cursor: pointer;
    transition: box-shadow 0.2s, border-color 0.2s;
}

.category-card:hover {
    box-shadow: 0 4px 18px #1e90ff;
    border-color: #1e90ff;
    color: #1e90ff;
}

.featured {
    padding: 0 36px 44px 36px;
}

.product-list {
    display: flex;
    gap: 24px;
    margin-top: 18px;
}

.product-card {
    background: #181818;
    border: 2px solid #2d0b4e;
    border-radius: 10px;
    padding: 32px 44px;
    font-size: 1rem;
    font-weight: bold;
    color: #fff;
    box-shadow: 0 2px 12px rgba(44, 0, 84, 0.10);
    text-align: center;
}

.product-img {
    width: 120px;
    height: 120px;
    object-fit: contain;
    margin-bottom: 12px;
    border-radius: 8px;
    background: #222;
    box-shadow: 0 2px 8px rgba(44, 0, 84, 0.10);
    display: block;
    margin-left: auto;
    margin-right: auto;
}

.placeholder {
    color: #6c2eb6;
    font-style: italic;
}

footer {
    background: linear-gradient(90deg, #2d0b4e 60%, #1e90ff 100%);
    color: #fff;
    padding: 22px 36px;
    text-align: center;
    border-radius: 24px 24px 0 0;
    margin-top: 32px;
}

.footer-links {
    margin-bottom: 12px;
}

.footer-links a {
    color: #fff;
    margin: 0 14px;
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.2s;
}

.footer-links a:hover {
    color: #6c2eb6;
    text-decoration: underline;
}

.preview-btn, .cart-btn {
    margin: 8px 6px 0 0;
    padding: 8px 18px;
    border: none;
    border-radius: 6px;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.2s, color 0.2s;
}

.preview-btn {
    background: #6c2eb6;
    color: #fff;
}

.preview-btn:hover {
    background: #1e90ff;
}

.cart-btn {
    background: #1e90ff;
    color: #fff;
}

.cart-btn:hover {
    background: #6c2eb6;
}

.cart-count {
    margin-top: 18px;
    font-size: 1.1rem;
    font-weight: bold;
    color: #1e90ff;
}

.product-detail {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 60vh;
    background: #0a0a0a;
}

.product-box {
    display: flex;
    flex-direction: row;
    background: #181818;
    border: 2px solid #6c2eb6;
    border-radius: 16px;
    box-shadow: 0 4px 24px rgba(44, 0, 84, 0.12);
    padding: 36px;
    gap: 36px;
    align-items: center;
    max-width: 700px;
}

.product-img-large {
    width: 240px;
    height: 240px;
    object-fit: contain;
    border-radius: 12px;
    background: #222;
    box-shadow: 0 2px 12px rgba(44, 0, 84, 0.10);
}

.product-info {
    display: flex;
    flex-direction: column;
    gap: 18px;
    color: #fff;
}

.product-info h2 {
    margin: 0;
    font-size: 2rem;
    color: #6c2eb6;
}

.price {
    color: #1e90ff;
    font-weight: bold;
    font-size: 1.3em;
    margin: 8px 0;
}

.buy-btn {
    padding: 12px 28px;
    background: #6c2eb6;
    border: none;
    border-radius: 8px;
    font-weight: bold;
    color: #fff;
    font-size: 1.1rem;
    cursor: pointer;
    margin-top: 10px;
    transition: background 0.2s;
}

.buy-btn:hover {
    background: #1e90ff;
}